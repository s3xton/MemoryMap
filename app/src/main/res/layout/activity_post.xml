<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.conor.project.PostActivity">


    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="180dp" android:id="@+id/map" tools:context=".MapsActivity"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        tools:layout="@layout/activity_maps" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:id="@+id/editText"
        android:layout_above="@+id/button"
        android:layout_below="@+id/map"
        android:text="Share something"
        android:onClick="clearText"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="post"
        android:id="@+id/post_button"
        android:background="#ffffc107"
        android:textColor="#ff3f0000"
        android:layout_below ='@+id/editText' />

</RelativeLayout>

